<h1>Edit this Promise!</h1>

<%= form_for @promise do |f| %>

  <p> You can update the description of the promise that was made to you: </p>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <p> And/or update the name of the promise-giver: </p>
  <%= f.label :giver %>
  <%= f.text_field :giver %>

  <%= f.label :status %>
  <%= f.select :status, options_for_select(Promise.status) %>

  <%= f.submit %>

<% end %>
